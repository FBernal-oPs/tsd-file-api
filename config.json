{
    "extensions": {
    "enabled": [
        "python_venv",
        "blocks",
        "file_permissions",
        "file_extras"
        ]
    },
    "core": {
        "group": "Application/System",
        "license": "AGPLv3",
        "name": "tsd-file-api",
        "summary": "An API for handling file and streams in TSD",
        "version": "0.1.0",
        "requires": [ ]
    },
    "python_venv": {
        "name": "tsd-auth-api-env",
        "path": "opt"
    },
    "blocks": {
        "desc": [
            "The tsd-file-api is a REST service that enables the following",
            "Uploading files as Content-Type: multipart/form-data",
            "Uploading files as chunked Content-Type: multipart/form-data",
            "Uploading files (and arbitrary data streams) using Transfer-Encoding: chunked",
            "It can, therfore, support arbitrarily large files if the HTTP client does what is necessary"
        ]
    },
    "file_permissions": {
            "user": "fileapi",
            "group": "fileapi",
            "create_user": true,
            "create_group": true
    },
    "file_extras": {
        "files": [
            {
                "src": "config/file-api-config.yaml.example",
                "dest": "/etc/opt/file-api-config.yaml.example",
                "config": "noreplace"
            },
            {
                "src": "config/file-api.service",
                "dest": "/etc/systemd/system/file-api.service"
            },
            {
                "src": "fileapi",
                "dest": "/usr/bin/fileapi"
            }
        ]
    }
}
