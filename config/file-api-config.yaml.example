
# API
port: 3003
debug: False
server_delay: 0
num_chunks: 50
max_body_size: 5368709120 # 5 GB

# JWT - generated by authapi -k
# should be base64 encoded
secret: '' # only use this if the auth-api serves one project, it is a global secret
use_secret_store: False
secret_store_type: 'postgresql' # if sqlite will use sqlite (not advised in prod)
ss_host: ''
ss_user: ''
ss_pw: ''
ss_dbname: ''
ss_ssl: True # always True in prod

# folders
uploads_folder: '/opt/file-api-uploads'

# Testing
data_folder: '/opt/tsd-file-api-env/lib/python2.7/site-packages/tsdfileapi/data'
test_project: 'p19'

# sqlite
sqlite_folder: '' # where on the project HNAS it should be

# pgp - which key will the API use to decrypt data
public_key_id: ''
gpg_binary: ''
gpg_homedir: ''
gpg_keyring: ''
gpg_secring: ''
test_key_dir: ''
